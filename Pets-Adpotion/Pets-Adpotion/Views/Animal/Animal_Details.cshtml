@model Pets_Adpotion.DAL.Entities.Animal

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de la Mascota</h1>

<div>
    <partial name="../Shared/PartialViews/_ProductDetails" />
</div>

<div>
    <a asp-action="AddImage" asp-route-productId="@Model?.Id" class="btn btn-outline-primary">Adicionar Imagen</a>
    <a asp-action="Edit" asp-route-productId="@Model?.Id" class="btn btn-outline-warning">Editar Producto</a>
    <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Imágenes</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="AnimalsTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ImageFullPath)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Tipos</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="TypesTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Type.Name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                   
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#AnimalsTypesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
            $('#AnimalsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}
